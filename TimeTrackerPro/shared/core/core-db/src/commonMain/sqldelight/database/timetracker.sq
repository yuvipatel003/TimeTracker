-------------  Settings Entity Started -----------------
CREATE TABLE settingsEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    username TEXT NOT NULL,
    email TEXT NOT NULL,
    currentAppVersion TEXT NOT NULL
);

getSettings:
SELECT *
FROM settingsEntity
WHERE id = 0;

insertSettings:
INSERT OR REPLACE
INTO settingsEntity(
    id,
    username,
    email,
    currentAppVersion
)
VALUES(0,?,?,?);

clearSettings:
DELETE
FROM settingsEntity;
-------------  Settings Entity Ended -----------------

