-------------  Settings Entity Started -----------------
CREATE TABLE settingsEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    username TEXT NOT NULL,
    email TEXT NOT NULL,
    currentAppVersion TEXT NOT NULL
);

getSettings:
SELECT *
FROM settingsEntity
WHERE id = 0;

insertSettings:
INSERT OR REPLACE
INTO settingsEntity(
    id,
    username,
    email,
    currentAppVersion
)
VALUES(0,?,?,?);

clearSettings:
DELETE
FROM settingsEntity;
-------------  Settings Entity Ended -----------------

-------------  Feature Entity Started -----------------
CREATE TABLE featureEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    feature TEXT NOT NULL,
    enabled INTEGER NOT NULL,
    androidVersion TEXT NOT NULL,
    iOSVersion TEXT NOT NULL
);

getFeatures:
SELECT *
FROM featureEntity
ORDER BY id;

insertFeature:
INSERT OR REPLACE
INTO featureEntity(
    id,
    feature,
    enabled,
    androidVersion,
    iOSVersion
)
VALUES(?,?,?,?,?);

clearFeatures:
DELETE
FROM featureEntity;
-------------  Feature Entity Ended -----------------

-------------  Category Entity Started -----------------
CREATE TABLE categoryEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL,
    name TEXT NOT NULL,
    favourite INTEGER DEFAULT 0
);

getCategoryList:
SELECT *
FROM categoryEntity
ORDER BY id;

getCategory:
SELECT *
FROM categoryEntity
WHERE id = ?;

insertCategory:
INSERT OR REPLACE
INTO categoryEntity(
    id,
    type,
    name,
    favourite
)
VALUES(?,?,?,0);

addCategoryToFavourite:
UPDATE categoryEntity
SET favourite = 1
WHERE id = ?;

removeAllCategoryFromFavourite:
UPDATE categoryEntity
SET favourite = 0
WHERE favourite = 1;

removeCategoryFromFavourite:
UPDATE categoryEntity
SET favourite = 0
WHERE id = ?;

deleteCategory:
DELETE
FROM categoryEntity
WHERE id = ?;

clearCategory:
DELETE
FROM categoryEntity;
-------------  Category Entity Ended -----------------

