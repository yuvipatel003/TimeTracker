-------------  Record Entity Started -----------------
CREATE TABLE recordEntity(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    startDate INTEGER NOT NULL,
    startTime INTEGER NOT NULL,
    endTime INTEGER NOT NULL,
    endDate INTEGER NOT NULL,
    totalTime TEXT NOT NULL,
    totalAmount TEXT NOT NULL,
    categoryId INTEGER NOT NULL DEFAULT 0,
    isPaid INTEGER NOT NULL DEFAULT 0,
    note TEXT NOT NULL DEFAULT "",
    lastUpdated INTEGER NOT NULL
);

getRecords:
SELECT *
FROM recordEntity
ORDER BY lastUpdated DESC
LIMIT 10 OFFSET ?;


getSelectedCategoryRecords:
SELECT *
FROM recordEntity
WHERE categoryId = ?
ORDER BY lastUpdated DESC
LIMIT 10 OFFSET ?;

getRecordsBetweenDates:
SELECT *
FROM recordEntity
WHERE startDate >= ? AND endDate <= ?
ORDER BY lastUpdated DESC
LIMIT 10 OFFSET ?;

getSingleRecord:
SELECT *
FROM recordEntity
WHERE id = ?;

insertRecord:
INSERT OR REPLACE
INTO recordEntity(
    id,
    startDate,
    startTime,
    endTime,
    endDate,
    totalTime,
    totalAmount,
    categoryId,
    isPaid,
    note,
    lastUpdated
)
VALUES(?,?,?,?,?,?,?,?,?,?,?);

markAsPaid:
UPDATE recordEntity
SET isPaid = 1
WHERE id = ?;

markAsUnPaid:
UPDATE recordEntity
SET isPaid = 0
WHERE id = ?;

deleteRecord:
DELETE
FROM recordEntity
WHERE id = ?;

deleteSelectedCategoryRecord:
DELETE
FROM recordEntity
WHERE categoryId = ?;

clearRecords:
DELETE
FROM recordEntity;
-------------  Record Entity Ended -----------------
