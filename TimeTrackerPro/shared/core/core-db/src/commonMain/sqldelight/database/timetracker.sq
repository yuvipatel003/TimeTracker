insertShowRecordPageSettings:
INSERT OR REPLACE
INTO showRecordPagesettingsEntity(
    id,
    dateFormat,
    timeFormatAMPM,
    showUnit,
    showRate,
    showTotalAmount,
    showPaidCheck,
    showCategory,
